@{
    Layout = Layout = "~/Views/Shared/_Layout.cshtml";
}

@model ProdutoModel;

<title>Projeto - Vaga Desenvolvedor (Cadastro de materiais)</title>

<body>
    <div class="container-xl">
        <div class="table-responsive">
            <div class="table-wrapper">
                <div class="table-title">
                    <div class="row">
                        <div class="col-sm-5">
                            <h2>Gerenciar <b>Produtos/Categoria</b></h2>
                        </div>
                        <div class="col-sm-7">

                            <a href="#newProductModal" class="btn btn-success" data-toggle="modal">
                                <i class="material-symbols-outlined">add</i> <span>Novo Produto</span>
                            </a>
                           
                            <a href="#manageCategoryModal" class="btn btn-success" data-toggle="modal">
                                <i class="material-symbols-outlined">settings</i> <span>Gerenciar Categorias</span>
                            </a>

                            <a href="#deleteProductModal" class="btn btn-danger" data-toggle="modal">
                                <i class="material-symbols-outlined">delete</i> <span>Apagar</span>
                            </a>       

                        </div>
                    </div>
                </div>



                <table class="table table-striped table-hover" , id="table_qry">
                    <thead>
                    </thead>



                    <tbody id="seletor">
                    </tbody>
                </table>
            </div>
        </div>
    </div>


    <!-- New Modal HTML -->
    <div id="newProductModal" class="modal fade">
        <div class="modal-dialog">
            <div class="modal-content">
                <form>
                    <div class="modal-header">
                        <h4 class="modal-title">Adicionar Produto</h4>
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    </div>
                    <div class="modal-body">
                        <div class="form-group">

                            <label>Nome</label>
                            <input type="text" id="nomeproduto" class="form-control" required>
                        </div>
                        <div class="form-group">

                            <label>Categoria</label>

                            <select id="categoria_modal">

                            </select>

                        </div>



                    </div>
                    <div class="modal-footer">
                        <input type="button" onclick="addproduto(event);" class="btn btn-success" value="Adicionar">
                    </div>
                </form>
            </div>
        </div>
    </div>
    <!-- Edit Modal HTML -->
    <div id="manageCategoryModal" class="modal fade">
        <div class="modal-dialog">
            <div class="modal-content">
                <form>
                    <div class="modal-header">
                        <h4 class="modal-title">Editar/Apagar Categoria</h4>
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    </div>
                    <div class="modal-body">

                        <div class="form-group">
                            <label>Categoria</label>
                            <select id="newprod_cat_modal" onclick="changePlaceholder()">
                                <option value="0"> Nova Categoria </option>

                            </select>
                            <input type="text" id="cat_new_or_change" class="form-control" placeholder="Nome da Categoria">
                        </div>
                        <input type="submit" id="btn_create_update_cat" class="btn btn-success" value="Atualizar">
                        <input type="button" id="btn_delete_cat" class="btn btn-danger" value="Apagar">
                    </div>
                </form>
            </div>
        </div>
    </div>
    <!-- Edit Product Modal HTML -->
    <div id="editProductModal" class="modal fade">
        <div class="modal-dialog">
            <div class="modal-content">
                <form>
                    <div class="modal-header">
                        <h4 class="modal-title">Editar Produto</h4>
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    </div>
                    <div class="modal-body">

                        <div class="form-group">
                            <label>Categoria</label>
                            <select id=categoria_modal>
                            </select>
                            <input type="text" class="form-control" placeholder="Novo nome" required>
                        </div>

                        <input type="submit" class="btn btn-success" value="Atualizar">
                        <input type="button" class="btn btn-info" value="Apagar">
                     </div>
                </form>
            </div>
        </div>
    </div>
    <!-- Edit Product Modal HTML -->

    <!-- Delete Modal HTML -->
    <div id="deleteProductModal" class="modal fade">
        <div class="modal-dialog">
            <div class="modal-content">
                <form>
                    <div class="modal-header">
                        <h4 class="modal-title">Apagar</h4>
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    </div>
                    <div class="modal-body">
                        <p>Tem certeza que deseja apagar?</p>
                        <p class="text-warning"><small>Isso não pode ser desfeito!</small></p>
                    </div>
                    <div class="modal-footer">
                        <input type="button" class="btn btn-default" data-dismiss="modal" value="Cancel">
                        <input type="button" class="btn btn-danger" value="Delete" onclick="removeproduct(event);">
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
